<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AdminDashboardTemplateMain"
                    xmlns:views="clr-namespace:AdminDashboardTemplateMain.Views"
                    xmlns:vmodel="clr-namespace:AdminDashboardTemplateMain.ViewModel">
    <Style TargetType="local:MainWindow">
        <Setter Property="FontFamily" Value="Cambria" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <DataTemplate DataType="{x:Type vmodel:DashboardViewModel}">
        <views:DashboardViewControl/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmodel:EmailViewModel}">
        <views:EmailViewControl/>
    </DataTemplate>
    
</ResourceDictionary>